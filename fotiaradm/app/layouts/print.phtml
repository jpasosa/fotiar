var REWRITE_ON = '<?=$config->url_rewrite ?>';
var BASE_URL = '<?=$this->baseUrl?>';
function getUrl(controller, action, query)
{
  var url = '';
  if (REWRITE_ON)
  {
    url = BASE_URL + controller + '/' + action + '?' + query;
  }
  else
  {
    url = BASE_URL + '?controller=' + controller + '&action=' + action + '&' + query;
  }
  return url;
}
